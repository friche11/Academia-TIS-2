<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Nova Ficha</title>
  <link rel="stylesheet" href="../css/montarFichas.css">
</head>
<body>
  <div class="wrapper">
    <div class="container">
    
      <form action="/personal/montar-ficha" method="POST">
        <div class="form-group">
              <div class="title">
        <h1>Nova Ficha</h1>
      </div>
          <label for="nome">Nome Ficha:</label>
          <input type="text" id="nome" name="nome" required>
        </div>
        <div class="form-group">
          <label for="grupoMuscular">Grupo Muscular:</label>
          <input type="text" id="grupoMuscular" name="grupoMuscular" required>
        </div>
        <div id="exercicios-container">
          <h1>Exercícios</h1>
          <div class="exercicio">
            <label for="nomeExercicio">Nome do exercício</label>
             <input type="text" id="nomeExercicio" name="exercicios[0][nomeExercicio]" required>
            <label for="repeticoes">Número de Repetições</label>
            <input type="number" id="repeticoes" name="exercicios[0][numeroRepeticoes]" required>
            <label for="series">Número de Séries</label>
<input type="number" id="series" name="exercicios[0][numeroSeries]" required>
<label for="descanso">Tempo de Descanso (em segundos)</label>
<input type="number" id="descanso" name="exercicios[0][descansoSeries]" required>
</div>
</div>
<div>
<button type="button" onclick="adicionarExercicio()">Adicionar Exercício</button>
<button type="submit">Salvar Ficha</button>
</form>
</div>

  </div>
  <script>
    let contadorExercicios = 1;

    function adicionarExercicio() {
      const exerciciosContainer = document.getElementById('exercicios-container');

      const novoExercicio = document.createElement('div');
      novoExercicio.className = 'exercicio';

      novoExercicio.innerHTML = `
      <label for="nomeExercicio">Nome do Exercício:</label>
        <input type="text" id="nomeExercicio" name="exercicios[${contadorExercicios}][nomeExercicio]" required>
        <label for="repeticoes">Número de Repetições:</label>
        <input type="number" id="repeticoes" name="exercicios[${contadorExercicios}][numeroRepeticoes]" required>
        <label for="series">Número de Séries:</label>
        <input type="number" id="series" name="exercicios[${contadorExercicios}][numeroSeries]" required>
        <label for="descanso">Tempo de Descanso (em segundos):</label>
        <input type="number" id="descanso" name="exercicios[${contadorExercicios}][descansoSeries]" required>
      `;

      exerciciosContainer.appendChild(novoExercicio);

      contadorExercicios++;
    }
  </script>
</body>
</html>